<div class="container">
  <h1 class="my-4">Surveys</h1>
  <ol class="list-group ">
    <% @surveys.each do |survey| %>
      <li class="list-group-item">
      	<%= survey.id %>.
        <%= survey.name %>
        <%= link_to 'Edit', edit_survey_path(survey), class: 'btn btn-primary btn-sm ml-2' %>
        <%= link_to 'show', survey_path(survey), class: 'btn btn-info btn-sm ml-2' %>
        <%= link_to 'Delete', survey_path(survey), data: { "turbo-method": :delete }, class: 'btn btn-danger btn-sm ml-2' %>
      </li>
    <% end %>
  </ol>
  <ul class="pagination">
    <%= will_paginate @surveys, class: 'page-item' %>
  </ul>
</div>
